<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE datasources
    PUBLIC "-//JBoss//DTD JBOSS JCA Config 1.5//EN"
    "http://www.jboss.org/j2ee/dtd/jboss-ds_1_5.dtd">
<datasources>
   
   <local-tx-datasource>
      <jndi-name>MeveoAdminDatasource</jndi-name>
      <use-java-context>false</use-java-context>
      <connection-url>@db.connection.url@</connection-url>
      <driver-class>oracle.jdbc.driver.OracleDriver</driver-class>
      <user-name>@db.username@</user-name>
      <password>@db.password@</password>
   </local-tx-datasource>
    <local-tx-datasource>
		<jndi-name>MeveoDWHDatasource</jndi-name>
		<use-java-context>false</use-java-context>
		<connection-url>@dbDWH.connection.url@</connection-url>
		<driver-class>oracle.jdbc.driver.OracleDriver</driver-class>
		<user-name>@dbDWH.username@</user-name>
		<password>@dbDWH.password@</password>
	</local-tx-datasource>
</datasources>