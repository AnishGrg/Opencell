{
	"entityMapping": {
		"AccountEntity": {
			"index": "accounts",
			"type": "account",
			"upsert": true
		},
		"OfferTemplate": {
			"index": "catalog"
		}
	},
	"entityFieldMapping": {
		"default": {
			"code": "code",
			"description": "description"
		},
		"AccountEntity": {
			"address": "address",
			"name.firstName": "name.firstName",
			"name.lastName": "name.lastName",
			"name.title": "name.title.code"
		}
	},
	"fieldTemplates": {
		"#{cft.fieldType == 'DATE' and (cft.storageType == 'SINGLE' or cft.storageType == 'LIST')}": {
			"properties": {
				"<fieldName>": {
					"type": "date",
					"index": "not_analyzed",
					"format": "strict_date_optional_time"
				}
			}
		},
		"#{cft.fieldType == 'LONG' and (cft.storageType == 'SINGLE' or cft.storageType == 'LIST')}": {
			"properties": {
				"<fieldName>": {
					"type": "long",
					"index": "not_analyzed"
				}
			}
		},
		"#{cft.fieldType == 'DOUBLE' and (cft.storageType == 'SINGLE' or cft.storageType == 'LIST')}": {
			"properties": {
				"<fieldName>": {
					"type": "double",
					"index": "not_analyzed"
				}
			}
		},
		"#{cft.fieldType != 'DATE' and cft.fieldType != 'LONG' and cft.fieldType != 'DOUBLE'}": {
			"properties": {
				"<fieldName>": {
					"type": "string",
					"index": "analyzed"
				}
			}
		},
		"#{cft.storageType == 'MAP' or cft.storageType == 'MATRIX'}": {
			"properties": {
				"<fieldName>": {
					"type": "string",
					"index": "analyzed"
				}
			}
		}
	},
	"dataModel": {
		"<provider>_catalog_v1": {
			"settings": {
				"index": {
					"number_of_shards": "5",
					"number_of_replicas": "1"
				}
			},
			"aliases": {
				"<provider>_catalog": {
					
				}
			},
			"mappings": {
				"OfferTemplate": {
					"properties": {
						"code": {
							"type": "string",
							"index": "not_analyzed"
						},
						"description": {
							"type": "string"
						}
					}
				}
			}
		},
		"<provider>_accounts_v1": {
			"settings": {
				"index": {
					"number_of_shards": "5",
					"number_of_replicas": "1"
				}
			},
