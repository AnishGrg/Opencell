		<addPrimaryKey columnNames="id" constraintName="medina_importedfile_pkey"
			tableName="medina_importedfile" />
		<addForeignKeyConstraint baseColumnNames="provider_id"
			baseTableName="medina_importedfile" constraintName="fk_medina_importedfile_crm_provider"
			deferrable="false" initiallyDeferred="false" onDelete="NO ACTION"
			onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="crm_provider" />
		<addForeignKeyConstraint baseColumnNames="creator_id"
			baseTableName="medina_importedfile" constraintName="fk_creator_medina_importedfile_adm_user"
			deferrable="false" initiallyDeferred="false" onDelete="NO ACTION"
			onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="adm_user" />
		
		<addForeignKeyConstraint baseColumnNames="updater_id"
			baseTableName="medina_importedfile" constraintName="fk_updater_medina_importedfile_adm_user"
			deferrable="false" initiallyDeferred="false" onDelete="NO ACTION"
			onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="adm_user" />
	</changeSet>
